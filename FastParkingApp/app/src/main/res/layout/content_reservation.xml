<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_reservation"
        tools:context=".viewcontrollers.activities.ReservationActivity">

        <TextView
                android:id="@+id/entryDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Choose the entry date"/>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/contentBeginDate"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entryDateLabel">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/entryDateTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Entry Date ()"
                        android:fontFamily="sans-serif-condensed"
                        android:textColorHint="@color/colorPrimary"
                        android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
            android:id="@+id/entryDateImageView"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entryDateLabel"
            app:layout_constraintStart_toEndOf="@+id/contentBeginDate" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
